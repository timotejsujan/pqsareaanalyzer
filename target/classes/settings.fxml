<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.settings_controller" prefHeight="554.0" prefWidth="793.0">

    <Label layoutX="57.0" layoutY="25.0" text="Settings">
        <font>
            <Font size="24.0"/>
        </font>
    </Label>

    <TextField fx:id="output_dir" editable="false" layoutX="49.0" layoutY="99.0" onMouseClicked="#set_output_dir" prefWidth="600" text="Select output directory..." />
    <Button layoutX="669" layoutY="99" mnemonicParsing="false" onAction="#set_output_dir" text="...">
