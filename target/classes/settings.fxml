            <Font size="13.0" />
        </font>
    </Button>
    <TextField fx:id="cdhit2D_path" editable="false" layoutX="49.0" layoutY="179.0" onMouseClicked="#set_cdhit2D_path" prefWidth="600" text="Select path to CD-HIT-EST-2D..." />
